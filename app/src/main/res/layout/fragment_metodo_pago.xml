<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="50dp"
    tools:context=".MetodoPagoFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="90dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/nombre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Seleccione el método de pago"
            android:layout_marginLeft="10dp"
            android:textColor="@color/colorGris2"
            android:textSize="20dp"
            android:textStyle="bold" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="150dp"
        android:layout_marginLeft="12dp"
        android:orientation="horizontal">
        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <RadioButton
                android:id="@+id/tarjetaCredito"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tarjeta de crédito"
                android:checked="true"
                android:textColor="@color/colorGrisOscuro"
                android:textSize="20dp"/>

            <RadioButton
                android:id="@+id/dineroEfectivo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorGrisOscuro"
                android:layout_marginTop="15dp"
                android:text="Dinero en efectivo"
                android:textSize="20dp"/>
            <RadioButton
                android:id="@+id/otros"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorGrisOscuro"
                android:layout_marginTop="15dp"
                android:text="Otros"
                android:textSize="20dp"/>
        </RadioGroup>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="23dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imagen"
                android:layout_marginStart="17dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="12dp"
                android:adjustViewBounds="true"
                android:src="@drawable/ic_credito"
                android:layout_marginTop="3dp"
                android:layout_gravity="top"/>
            <ImageView
                android:id="@+id/imagen1"
                android:layout_marginStart="17dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="12dp"
                android:adjustViewBounds="true"
                android:layout_marginTop="15dp"
                android:src="@drawable/ic_coins"
                android:layout_gravity="top"/>
            <ImageView
                android:id="@+id/imagen2"
                android:layout_marginStart="17dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                android:adjustViewBounds="true"
                android:layout_marginTop="15dp"
                android:src="@drawable/ic_bizum"
                android:layout_gravity="top"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"

        android:orientation="vertical">

        <Button
            android:id="@+id/siguiente"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:padding="10dp"
            android:layout_gravity="center"
            android:textColor="@color/colorBlanco"
            android:textStyle="bold"
            android:background="@drawable/button_rounded_login"
            android:text="SELECCIONAR"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:orientation="vertical">

        <Button
            android:id="@+id/recibo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:padding="10dp"
            android:layout_gravity="center"
            android:textColor="@color/colorBlanco"
            android:textStyle="bold"
            android:background="@drawable/button_rounded_login"
            android:text="Generar Recibo"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:orientation="vertical">

        <Button
            android:id="@+id/seleccionar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:padding="10dp"
            android:layout_gravity="center"
            android:textColor="@color/colorBlanco"
            android:textStyle="bold"
            android:background="@drawable/button_rounded_login"
            android:text="SELECCIONAR"/>

    </LinearLayout>
</FrameLayout>