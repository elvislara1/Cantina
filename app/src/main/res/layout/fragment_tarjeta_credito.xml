<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TarjetaCreditoFragment">

    <EditText
        android:id="@+id/caducidad3"
        android:layout_width="130dp"
        android:layout_height="39dp"
        android:background="@drawable/button_rounded_border_formulario"
        android:drawableStart="@drawable/candado"
        android:drawablePadding="10dp"
        android:ems="10"
        android:hint="0000"
        android:inputType="number"
        android:padding="10dp"
        android:textSize="13dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.764"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.657" />

    <EditText
        android:id="@+id/caducidad5"
        android:layout_width="130dp"
        android:layout_height="39dp"
        android:background="@drawable/button_rounded_border_formulario"
        android:drawableStart="@drawable/ic_baseline_today_24"
        android:drawablePadding="10dp"
        android:ems="10"
        android:hint="MM/YY"
        android:inputType="textPersonName"
        android:padding="10dp"
        android:textSize="13dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.202"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.657" />

    <ImageView
        android:id="@+id/logo"
        android:layout_width="83dp"
        android:layout_height="71dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:src="@drawable/cantina"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.028"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <Button
        android:id="@+id/pagar"
        android:layout_width="147dp"
        android:layout_height="46dp"
        android:layout_marginBottom="96dp"
        android:background="@drawable/button_rounded_pagar"
        android:padding="10dp"
        android:text="PAGAR"
        android:textColor="@color/colorBlanco"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.481"
        app:layout_constraintStart_toEndOf="@+id/cancelar" />

    <Button
        android:id="@+id/cancelar"
        android:layout_width="147dp"
        android:layout_height="46dp"
        android:layout_marginBottom="96dp"
        android:background="@drawable/button_rounded_cancelar"
        android:padding="10dp"
        android:text="CANCELAR"
        android:textColor="@color/colorBlanco"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.159"
        app:layout_constraintStart_toStartOf="parent" />



    <EditText
        android:id="@+id/numerotarjeta"
        android:layout_width="299dp"
        android:layout_height="37dp"
        android:background="@drawable/button_rounded_border_formulario"
        android:drawableStart="@drawable/ic_baseline_person_pin_24"
        android:drawablePadding="8dp"
        android:ems="10"
        android:hint="Daniel Martinez Fernandez"
        android:inputType="textPersonName"
        android:padding="10dp"
        android:textSize="13dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.347" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="Nombre Completo:"
        app:layout_constraintBottom_toTopOf="@+id/numerotarjeta"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.184"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="Nº Tarjeta:"
        app:layout_constraintBottom_toTopOf="@+id/nombre2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.156"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="Caducidad:"
        app:layout_constraintBottom_toTopOf="@+id/caducidad5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.164"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="Cód.Seguridad:"
        android:paddingLeft="11dp"
        app:layout_constraintBottom_toTopOf="@+id/caducidad3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.669"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/tarjeta"
        android:layout_width="233dp"
        android:layout_height="43dp"
        android:background="@drawable/button_rounded2"
        android:drawableEnd="@drawable/pago4"
        android:ems="10"
        android:inputType="textPersonName"
        android:padding="10dp"
        android:text="PAGO CON TARJETA"
        android:textColor="@color/colorGris2"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.188" />

    <EditText
        android:id="@+id/nombre2"
        android:layout_width="299dp"
        android:layout_height="37dp"
        android:background="@drawable/button_rounded_border_formulario"
        android:drawableStart="@drawable/ic_baseline_credit_card_24"
        android:drawablePadding="10dp"
        android:ems="10"
        android:hint="0000 0000 0000 0000"
        android:inputType="number"
        android:padding="10dp"
        android:textSize="13dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.482"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />



</androidx.constraintlayout.widget.ConstraintLayout>