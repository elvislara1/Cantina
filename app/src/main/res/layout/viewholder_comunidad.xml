<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/comunidad"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="10dp"
    android:paddingEnd="10dp"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/foto"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:paddingTop="@dimen/nav_header_vertical_spacing"
        android:paddingStart="17dp"
        app:srcCompat="@drawable/ic_perfil"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/nombre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="22sp"
        android:fontFamily="sans-serif-light"
        android:textColor="@color/colorGris2"
        android:paddingStart="17dp"
        tools:text="nombre"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/foto"/>

    <RatingBar
        android:id="@+id/valoracion"
        android:layout_width="wrap_content"
        android:layout_height="42dp"
        android:isIndicator="true"
        android:numStars="5"
        android:stepSize="1.0"
        android:transformPivotY="15dp"
        android:transformPivotX="35dp"
        android:scaleX="0.6"
        android:scaleY="0.6"
        app:layout_constraintTop_toBottomOf="@id/foto"
        app:layout_constraintLeft_toLeftOf="parent"/>
        <!--android:rating="3.5"-->
    <TextView
        android:id="@+id/fecha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="17sp"
        android:fontFamily="sans-serif-light"
        android:textColor="@color/colorGris2"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="10dp"
        tools:text="14/2/2001"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/cabecera"
        app:layout_constraintStart_toEndOf="@id/valoracion"/>

    <TextView
        android:id="@+id/cabecera"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="17dp"
        android:textColor="@color/colorNegro"
        android:textStyle="italic"
        android:textSize="27sp"
        android:fontFamily="sans-serif-light"
        tools:text="FANTÃSTICO"
        app:layout_constraintTop_toBottomOf="@id/valoracion"/>

    <TextView
        android:id="@+id/comentario"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:gravity="fill"
        android:fontFamily="sans-serif-light"
        android:textColor="@color/colorGris2"
        android:paddingStart="17dp"
        android:layout_marginEnd="10dp"
        tools:text="Comentario..."
        app:layout_constraintTop_toBottomOf="@id/cabecera"/>
</androidx.constraintlayout.widget.ConstraintLayout>